<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="perspective_helloworld_post" resource="default" comment="Create table using declarative schema">
        <column xsi:type="int" name="post_id" padding="10" identity="true" unsigned="true" nullable="false" comment="Post Id"/>
        <column xsi:type="varchar" name="Post Name" nullable="false" length="255" comment="Post Name"/>
        <column xsi:type="varchar" name="url_key" length="255" comment="Url_key"/>
        <column xsi:type="varchar" name="post_content" length="255" comment="Post_content"/>
        <column xsi:type="varchar" name="tags" length="255" comment="Post_tags"/>
        <column xsi:type="int" name="status" comment="Post status"/>
        <column xsi:type="varchar" name="featured_image" length="255" comment="featured_image"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" comment="created_at"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" comment="updated_at"/>
        <column xsi:type="timestamp" name="time" comment="Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="post_id"/>
        </constraint>
    </table>
</schema>